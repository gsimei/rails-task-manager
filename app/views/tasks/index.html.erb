<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <div class="task">
      <%= link_to task.title, show_task_path(task.id) %>
      <input type="checkbox" <%= task.completed ? 'checked="checked"' : ''  %>>
    </li>
    </div>
  <% end %>
</ul>
<%= link_to '+ Add a new task', new_task_path(@task), :class => 'btn btn-danger' %>

