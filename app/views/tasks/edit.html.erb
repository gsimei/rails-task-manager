<h1>Edit Task</h1>

<%= form_with model: @task, url: update_task_path(@task) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :details %>
  <%= form.text_area :details %>
  <%= form.label :completed %>
  <%= form.check_box :completed %>
  <%= form.submit "Update Task" %>
<% end %>
