<div class="p-3 mb-2 bg-secondary text-white text-center">
<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>
</div>
<div class="text-center">
<%= link_to "Delete", delete_task_path(@task.id), :class => 'btn btn-danger', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
<%= link_to "Edit", edit_task_path(@task), :class => 'btn btn-primary' %>
<%= link_to "Tasks", tasks_path(@task), :class => 'btn btn-success' %>
</div>
